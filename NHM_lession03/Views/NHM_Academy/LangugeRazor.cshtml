
@{
    ViewBag.Title = "LangugeRazor";
}

<h2>LangugeRazor</h2>

<h3>Ngài</h3>
@{
    var name = "Ngô Hoàng Minh";
    int age = 20;
    DateTime Phone = DateTime.Now;
}
<p>Họ Và Tên: @name</p>
<p>Tuổi: @age</p>
<p>Time: @Phone</p>
<hr />
<h3>Câu lệnh if</h3>
@{
    if (age > 19)
    {
        <p>Tuổi @age => Đủ tuổi đi tò rồi</p>
    }
    else
    {
        <p>Hmm</p>
    }
}
<hr />
<h3>Loop: for, while, do....while, foreach....</h3>
@{
    int num = 10;
}
@for (int i = 0; i < num; i++)
{
    <li>@i => @i*@i</li>
}
<h3>Mảng</h3>
@{
    string[] names = { "Lê Văn M ", "Trần Minh N", "Lê Trần Khac D", "Le Hoang L" };
}
@foreach (var item in names)
{
    <p>@item</p>
}
@foreach (var item in ViewBag.Names)
{
    <p>@item</p>
}    